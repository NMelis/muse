{{ define "pages/index.tmpl" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{ template "partials/meta" }}
    {{ template "partials/styles" }}
  </head>

  <body>
    <main>
      <p>Loaded {{ len .Collection }} songs.</p>
      <table>
        <thead>
          <th>Artist</th>
          <th>Album</th>
          <th>Title</th>
          <th>Cover</th>
        </thead>
        <tbody>
          {{ range $song := .Collection }}
          <tr>
            <td>{{ $song.Tag.Artist }}</td>
            <td>{{ $song.Tag.Album }}</td>
            <td>{{ $song.Tag.Title }}</td>
            <td>
              {{ if $song.Tag.Picture }}
                <img src="/thumbnail/{{ $song.ID }}" width="100">
              {{ end }}
            </td>
          </tr>
          {{ end }}
        </tbody>
      </table>
    </main>
  </body>
</html>
{{ end }}
