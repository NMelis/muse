{{ define "pages/index.tmpl" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{ template "partials/meta" }}
    {{ template "partials/styles" }}
  </head>

  <body>
    <main class="player-container">
      <div class="player">
        <img class="album" src="/thumbnail/{{ .DefaultTrack.ID }}">

        <div class="tracker">
          <span class="current_pos">00:00</span>
          <input type="range" min="0" max="100" value="0" class="slider" name="progress">
          <span class="duration">00:00</span>
        </div>

        <div class="info">
          <h1 class="current_artist">{{ .DefaultTrack.Tag.Artist }}</h1>
          <h2 class="now_playing">{{ .DefaultTrack.Tag.Title }}</h2>
        </div>

        <div class="controls">
          <input type="checkbox" id="repeat" name="repeat">
          <label for="repeat">{{ embed "images" "repeat.svg" }}</label>

          <button class="skip_back" style="display: none;">
            <img src="/assets/images/play.svg" width="30">
          </button>

          <button class="prev">
            <img src="/assets/images/backward.svg" width="25">
          </button>

          <button class="play">
            <img src="/assets/images/play.svg" width="30">
          </button>

          <button class="next">
            <img src="/assets/images/forward.svg" width="25">
          </button>

          <button class="skip_forward" style="display: none;">
            <img src="/assets/images/play.svg" width="30">
          </button>

          <input type="checkbox" id="shuffle" name="shuffle">
          <label for="shuffle">{{ embed "images" "shuffle.svg" }}</label>
        </div>

        <div class="playlist">
          <ol style="display: none;">
            {{ range $index, $track := .Tracks }}
              <li data-index="{{ $index }}" data-id="{{ $track.ID }}" data-title="{{ $track.Tag.Title }}" data-artist="{{ $track.Tag.Artist}}" >{{ $track.Tag.Artist }} - {{ $track.Tag.Title }}</li>
            {{ end }}
          </ol>
        </div>

        <script src="/assets/js/app.js?v={{ ran_at }}"></script>
      </div>
    </main>
  </body>
</html>
{{ end }}
