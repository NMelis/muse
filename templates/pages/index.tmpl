{{ define "pages/index.tmpl" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{ template "partials/meta" }}
    {{ template "partials/styles" }}
  </head>

  <body>
    <main>
      <!-- Album Art -->
      <img src="/thumbnail/{{ .DefaultTrack.ID }}" width="320">

      <!-- Player Controls -->
      <div class="player">
        <button>Play</button>
      </div>

      <!-- Track List -->
      <ol>
        {{ range $track := .Tracks }}
          <li data-id="{{ $track.ID }}">{{ $track.Tag.Title }}</li>
        {{ end }}
      </ol>

      <script src="/assets/js/app.js?v={{ ran_at }}"></script>
    </main>
  </body>
</html>
{{ end }}
