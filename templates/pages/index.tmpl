{{ define "pages/index.tmpl" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{ template "partials/meta" }}
    {{ template "partials/styles" }}
  </head>

  <body>
    <main>
      {{ range $song := .Collection }}
        {{ if $song.Tag.Picture }}
          <img src="/thumbnail/{{ $song.ID }}" width="100">
        {{ end }}
        <p>{{ $song.Tag.Artist }} | {{ $song.Tag.Album }} &gt; {{ $song.Tag.Title }} ({{ $song.Path }})</p>
      {{ end }}
    </main>
  </body>
</html>
{{ end }}
